<h1>ðŸŸ¢ Productos en Tiempo Real</h1>

<form id="productForm">
  <input type="text" name="title" placeholder="Nombre del producto" required />
  <input type="number" name="price" placeholder="Precio" required />
  <button type="submit">Agregar Producto</button>
</form>

<ul id="productsList">
  {{#each products}}
    <li id="{{this.id}}">{{this.title}} - ${{this.price}} <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button></li>
  {{/each}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  const form = document.getElementById('productForm');
  const productsList = document.getElementById('productsList');

  // Agregar producto
  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(form));
    socket.emit('newProduct', data);
    form.reset();
  });

  // Eliminar producto
  productsList.addEventListener('click', (e) => {
    if(e.target.classList.contains('deleteBtn')){
      const id = e.target.dataset.id;
      socket.emit('deleteProduct', id);
    }
  });

  // Actualizar lista en tiempo real
  socket.on('updateProducts', (products) => {
    productsList.innerHTML = '';
    products.forEach(p => {
      productsList.innerHTML += `<li id="${p.id}">${p.title} - $${p.price} <button class="deleteBtn" data-id="${p.id}">Eliminar</button></li>`;
    });
  });
</script>